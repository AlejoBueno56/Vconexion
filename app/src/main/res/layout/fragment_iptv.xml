<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".home.servicios.IPTVFragment">

    <!-- Botón de regreso -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/back_button"
        app:tint="#265caf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Título principal -->
            <TextView
                android:id="@+id/iptvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vconexión: Tu Puerta al Mundo del IPTV"
                android:textColor="#265CAF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Imagen principal -->

            <!-- Tarjeta: ¿Qué es IPTV? -->

            <ImageView
                android:id="@+id/iptvImageSubtitle1"
                android:layout_width="282dp"
                android:layout_height="202dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_tvlatino" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/iptvSubtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Qué es IPTV y Por Qué Elegir Vconexión?"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/iptvDescription1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="La televisión por streaming (IPTV) ha revolucionado la forma de consumir contenido audiovisual. Vconexión S.A.S ofrece más de 3000 canales y películas seleccionadas para ti."
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:gravity="center" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Imagen secundaria -->

            <!-- Tarjeta: Variedad de contenidos -->

            <ImageView
                android:id="@+id/iptvImageSubtitle2"
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_tv" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/iptvSubtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amplia Variedad de Contenidos"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/iptvDescription2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Accede a noticias, deportes, entretenimiento y películas actualizadas para toda la familia."
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:gravity="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Imagen beneficios -->

            <!-- Tarjeta: Beneficios -->
            <ImageView
                android:id="@+id/iptvImageSubtitle3"
                android:layout_width="295dp"
                android:layout_height="186dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_beneip" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/iptvSubtitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beneficios de Vconexión IPTV"
                        android:textColor="#265CAF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/iptvDescription3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✔️ Más de 3000 canales\n✔️ Interfaz fácil de usar\n✔️ Servicio confiable\n✔️ Actualizaciones constantes"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:gravity="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón de contacto -->
            <Button
                android:id="@+id/contactButton"
                android:layout_width="338dp"
                android:layout_height="65dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#265CAF"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="CONTÁCTANOS"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


