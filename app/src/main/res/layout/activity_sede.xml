<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sede_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="#ffffff">

    <TextView
        android:id="@+id/titulo_sede"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona tu sucursal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#265caf"
        android:layout_marginBottom="36dp" />

    <Button
        android:id="@+id/btn_pamplona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pamplona"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#265caf"
        android:textColor="#FFFFFF"
        android:minHeight="56dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_chitaga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ChitagÃ¡"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#265caf"
        android:textColor="#FFFFFF"
        android:minHeight="56dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_toledo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toledo"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#265caf"
        android:textColor="#FFFFFF"
        android:minHeight="56dp" />

</LinearLayout>
